<div class="col-6">
  <%# Pour rendre les cards clickables: %>
  <%= link_to list_path(list), class: "text-decoration-none" do %>
    <%# Cas sans photo ni url %>
    <% if list.image_url.nil? && !list.photo.attached? %>
      <div class="list-card shadow-sm rounded d-flex justify-content-center align-items-center" style="background-image: ulinear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://cdn.wallpapersafari.com/29/24/4Vg92a.jpg)">
        <h5 class="text-white fw-bold p-3 mb-0"><%= list.name %></h5>
      </div>
    <%# Cas avec photo, qu'il y ait une url ou non %>
    <% elsif list.photo.attached? %>
      <div class="list-card shadow-sm rounded d-flex justify-content-center align-items-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path list.photo.key, crop: :fill %>)">
        <h5 class="text-white fw-bold p-3 mb-0"><%= list.name %></h5>
      </div>
    <%# Cas sans photo, mais avec une url %>
    <% else %>
      <div class="list-card shadow-sm rounded d-flex justify-content-center align-items-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.image_url %>)">
        <h5 class="text-white fw-bold p-3 mb-0"><%= list.name %></h5>
      </div>
    <% end %>
  <% end %>
</div>
