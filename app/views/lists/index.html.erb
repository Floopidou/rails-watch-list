<%= render "navbar" %>
<%= render "banner", home: true, list: nil %>

<!-- Lists Section -->
<div class="container my-4">
  <div class="row align-items-center mb-3">
    <div class="col">
      <h2>My Lists</h2>
    </div>
    <div class="col-auto">
      <%= link_to "Create a movie list", new_list_path, class: "btn btn-success" %>
    </div>
  </div>
  <div class="row g-3">
    <% @lists.each do |list| %>
      <%= render "listcard", list: list %>
    <% end %>
  </div>
</div>
