<div class="bookmark-form-card">
  <h5>+ Add a Movie</h5>
  <%= simple_form_for [list, bookmark] do |f| %>
    <%= f.association :movie, label: "Movie" %>
    <%= f.input :comment, as: :text, input_html: { rows: 3 }, label: "Your note" %>
    <%= f.submit "Add to list", class: "btn btn-add-movie" %>
  <% end %>
</div>
